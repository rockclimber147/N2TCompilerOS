{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run main.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with g++"
        },
        {
            "name": "Debug: main_app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}", 
            "args": ["test.txt"],
            "cwd": "${workspaceFolder}", // Run from project root
            "miDebuggerPath": "/usr/bin/gdb" // Your WSL GDB path
        },
        {
            "name": "Debug: assembler_unit_tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [], // Tests usually don't need arguments
            "cwd": "${workspaceFolder}/build", // Running tests from build folder is common
            "miDebuggerPath": "/usr/bin/gdb" // Your WSL GDB path
        }
    ]
}